{
  "files": [],
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "ES2015.Generator",
      "ES2015.Proxy",
      "ES2015.Reflect",
      "ES2015.Promise",
      "DOM.AsyncIterable",
    ],
    "module": "ESNext",
    "skipLibCheck": true,

    "jsx": "preserve",
    "jsxImportSource": "vue",
    "jsxFactory": "vue",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./types/*"]
    },
    "types": [
      "element-plus/global"
    ]
  },
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "include": ["./eslint.config.js"],
  "exclude": ["node_modules"]
}
