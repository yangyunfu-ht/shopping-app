{
  "name": "shopping-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,vue,json,css,scss,md}\"",
    "dev": "vite --mode development",
    "build": "vue-tsc -b && vite build --mode development",
    "dev:production": "vite --mode production",
    "build:production": "vue-tsc -b && vite build --mode production",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "@vueuse/core": "^13.9.0",
    "ag-grid-community": "30.0.0",
    "ag-grid-vue3": "30.0.0",
    "axios": "^1.11.0",
    "element-plus": "^2.11.1",
    "normalize.css": "^8.0.1",
    "nprogress": "^0.2.0",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.5.0",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.0",
    "@types/nprogress": "^0.2.3",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.3.0",
    "lint-staged": "^16.1.6",
    "postcss-gap-properties": "^6.0.0",
    "postcss-preset-env": "^10.3.1",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.42.0",
    "unplugin-auto-import": "^20.1.0",
    "unplugin-vue-components": "^29.0.0",
    "vite": "^7.1.2",
    "vite-plugin-svg-icons": "^2.0.1",
    "vue-tsc": "^3.0.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,css,less,scss,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx --no -- commitlint --edit \"$1\""
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead",
    "ie 11"
  ],
  "engines": {
    "node": "22.19.0",
    "npm": "10.9.3"
  }
}
